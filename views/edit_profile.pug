extends layouts/main 

block contents
    .form-container
        form(action=`/users${routes.edit_profile}`, method="post")
            label(for="avengers") Avengers
            input(type="file", id="avengers", name="avengers")
            input(type="text", placeholder="Name", name="name")
            input(type="email", placeholder="Email", name="email")
            input(type="submit", value="Change Profile")
        a.form-container__link(href=`/users${routes.change_password}`) Change Password