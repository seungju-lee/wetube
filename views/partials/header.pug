header.header
    .header_column
        a(href=routes.home)
            i.fab.fa-youtube
    .header_column
        form(action=routes.search, method="GET")
            input(type="text", placeholder="Search Term..", name="term")
    .header_column
        ul
            if !user.isAuthenticated 
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log in
            else
                li
                    a(href=`/videos${routes.upload}`) Upload
                li
                    a(href=routes.user_detail(user.id)) Profile
                li
                    a(href=routes.logout) Log out