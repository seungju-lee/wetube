extends layouts/main 

block contents
    .video-detail__container
        .video__player
            video(src=`/${video.fileUrl}`, controls=true)
        .video__info
            a(href=routes.edit_video(video.id)) 
                button Edit Video
            h5.video__title=video.title
            if video.views === 1
                span.video__view 1 view
            else
                span.video__view #{video.views} views
            p.video_description=video.description
        .video__comments
            if video.comments.length === 1
                span.video__comment-number 1 commnet
            else
                span.video__comment-number #{video.comments.length} comments
